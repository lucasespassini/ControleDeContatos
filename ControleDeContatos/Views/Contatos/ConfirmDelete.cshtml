@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}

<div class="text-center">
    <h3 class="display-4 pt-2">Realmente deseja apagar o contato @Model.Nome?</h3>
</div>

<a role="button" class="btn btn-danger" asp-controller="Contatos" asp-action="Delete" asp-route-id="@Model.Id">Apagar</a>
<a role="button" class="btn btn-secondary" asp-controller="Contatos" asp-action="Index">Voltar</a>

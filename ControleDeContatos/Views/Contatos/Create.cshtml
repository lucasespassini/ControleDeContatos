@model ContatoModel
@{
    ViewData["Title"] = "Cadastrar contato";
}

<div class="text-center">

    <h1 class="display-4 pt-2">Cadastrar contato</h1>

</div>

<form asp-controller="Contatos" asp-action="Create" method="post">
    <div class="mb-3">
        <div class="form-group">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" placeholder="Lucas Mendes">
            @Html.ValidationMessageFor(contato => contato.Nome)
        </div>

        <div class="form-group">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="lucas@gmail.com">
            @Html.ValidationMessageFor(contato => contato.Email)
        </div>

        <div class="form-group">
            <label for="contato" class="form-label">Contato</label>
            <input type="number" class="form-control" asp-for="Celular" placeholder="997739612">
            @Html.ValidationMessageFor(contato => contato.Celular)
        </div>
    </div>

    <button type="submit" class="btn btn-success">Criar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Contatos" asp-action="Index">Voltar</a>
</form>                                                         

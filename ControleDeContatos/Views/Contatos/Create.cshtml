@{
    ViewData["Title"] = "Cadastrar contato";
}

<div class="text-center">

    <h1 class="display-4 pt-2">Cadastrar contato</h1>

</div>

<form>
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" placeholder="Lucas Mendes">

        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" placeholder="lucas@gmail.com">

        <label for="contato" class="form-label">Contato</label>
        <input type="number" class="form-control" id="contato" placeholder="997739612">
    </div>

    <button type="submit" class="btn btn-success">Criar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Contatos" asp-action="Index">Voltar</a>
</form>                                                         

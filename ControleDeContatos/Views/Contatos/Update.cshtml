@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1 class="display-4 pt-2">Editar contato</h1>

</div>

<form asp-controller="Contatos" asp-action="UpdateChanges" method="post">
    <div class="mb-3">
        <input type="hidden" class="form-control" asp-for="Id">

        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Lucas Mendes">

        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="lucas@gmail.com">

        <label for="contato" class="form-label">Contato</label>
        <input type="number" class="form-control" asp-for="Celular" placeholder="997739612">
    </div>

    <button type="submit" class="btn btn-success">Atualizar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Contatos" asp-action="Index">Voltar</a>
</form>
